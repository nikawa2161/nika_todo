.container
  %ul
    - @card.errors.full_messages.each do |message|
      %li= message

  = form_with(model: @card, url: board_cards_path(@card.board), local: true) do |f|
    %div
      = f.label :title, 'タイトル'
    %div
      = f.text_area :title
    %div
      = f.label :content, '内容'
    %div
      = f.text_area :content
    = f.submit '保存', class: 'btn-primary'